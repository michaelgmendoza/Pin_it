<div class="row">
  <% @pins.each do |pin| %>
  <div class="col-md-3">
    <div class="pin">
      <%= image_tag pin.pin_image.url(:medium), class: "img-responsive" %>
      <p><%= pin.description %></p>
      <div class="">
        <%= link_to 'Edit', edit_pin_path(pin) %> | <%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  </div>
  <% end %>
</div>
